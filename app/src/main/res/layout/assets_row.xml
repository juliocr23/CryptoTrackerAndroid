<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
     android:background="@color/asset_color">
    <ImageView
        android:id="@+id/cryptoIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:contentDescription="Cryptocurrency Image"
        android:src="@drawable/bitcoin_test"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/louis_george_cafe"
            android:text="Name"/>
        <TextView
            android:id="@+id/symbolTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/Symbol_name_color"
            android:fontFamily="@font/louis_george_cafe"
            android:text="Symbol"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <TextView
            android:id="@+id/priceTV"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:textSize="15sp"
            android:fontFamily="@font/louis_george_cafe"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:background="@drawable/rounded_textview"
            android:text="5000"
            />
    </FrameLayout>





</LinearLayout>